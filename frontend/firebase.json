{
  "database": {
    "rules": "database.rules.json"
  },
  "hosting": {
    "public": "public",
    "headers": [ {
      "source" : "**/*.@(eot|otf|ttf|ttc|woff|font.css|jpg|jpeg|gif|png)",
      "headers" : [ {
        "key" : "Access-Control-Allow-Origin",
        "value" : "*"
      } ]
    } ]
  }
}
